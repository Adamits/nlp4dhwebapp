{
    "settings": {
        "index.max_result_window": "10000",
        "index.max_inner_result_window": "1000000"
    },
    "mappings": {
        "corpus": {
            "properties": {
                "name": {
                    "type": "keyword"
                },
                "created_at": {
                    "type": "date"
                },
                "sentences": {
                    "type": "nested",
                    "properties": {
                        "content": {
                            "type": "text"
                        },
                        "textSpans": {
                            "type": "nested"
                        }
                    }
                }
            }
        }
    }
}
